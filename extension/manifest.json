{
  "manifest_version": 3,
  "name": "Quick Twitter Block",
  "version": "1.0.0",
  "description": "One-click block/hide buttons for Twitter posts. Instantly filter unwanted accounts.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
